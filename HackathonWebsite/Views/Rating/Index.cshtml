@model IEnumerable<HackathonWebsite.BLL.DtoEntities.HackathonTaskDtos.TaskRatingReadDto>

<div class="text-center">
    <h1 class="display-4">Users rating</h1>
    <br />
    <hr />
    <br />

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>User</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Name</td>
                <td>@r.UserName</td>
                <td>@r.Rating</td>
                <td>
                        @if (User.IsInRole("User") || User.IsInRole("Teacher") || User.IsInRole("Admin"))
                    {
                        <a class="btn btn-sm btn-outline-primary me-1" asp-controller="Rating" asp-action="View" asp-route-username="@r.UserName">
                            View
                        </a>
                    }

                    @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
                    {
                        <a class="btn btn-sm btn-outline-primary me-1" asp-controller="Rating" asp-action="Rate" asp-route-username="@r.UserName">
                            Rate
                        </a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-sm btn-outline-danger" asp-controller="Rating" asp-action="Delete" asp-route-username="@r.UserName">
                            Delete
                        </a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>