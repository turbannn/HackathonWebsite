<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HackathonWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HackathonWebsite.styles.css" asp-append-version="true" />
    <style>
        .offcanvas-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        .sidebar-header {
            font-weight: bold;
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .user-profile {
            padding-top: 1rem;
            border-top: 1px solid #ddd;
        }

            .user-profile small {
                display: block;
                color: #888;
            }
    </style>
</head>
<body>

    <button class="btn btn-outline-secondary m-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu">
        ☰
    </button>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
        <div class="offcanvas-header">
            <h4 class="offcanvas-title" id="sidebarMenuLabel">The Hackathon</h4>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div>
                <div class="sidebar-header">Navigation</div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Rating" asp-action="RedirectToIndex">Rating</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="RegistrationView">SignUp</a>
                    </li>
                </ul>
            </div>

            <!-- Нижняя часть — профиль -->
            <div class="user-profile">
                <hr />
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    var username = User.Identity.Name;
                    var role = User.IsInRole("Teacher") ? "Teacher" :
                        User.IsInRole("User") ? "User" : "Unknown";
                    <div>
                        <strong>👤 @username</strong>
                        <small>Role: @role</small>
                    </div>
                    <a class="btn btn-sm btn-outline-primary mt-2" asp-controller="Users" asp-action="UserProfileView">Profile</a>
                    <a class="btn btn-sm btn-outline-danger mt-2" asp-controller="Users" asp-action="Logout">Logout</a>
                }
                else
                {
                    <div>
                        <strong>👤 Guest</strong>
                        <small>Role: None</small>
                    </div>
                    <a class="btn btn-sm btn-outline-primary mt-2" asp-controller="Home" asp-action="Login">Login</a>
                }
            </div>

        </div>
    </div>

    <!-- Основной контент -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Футер -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - HackathonWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
