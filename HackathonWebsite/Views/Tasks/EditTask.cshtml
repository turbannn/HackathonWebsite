@{
    ViewData["Title"] = "Edit Task";
}

@model HackathonWebsite.BLL.DtoEntities.HackathonTaskDtos.TaskProfileReadDto

<script src="~/js/TaskFrontend.js"></script>
<link rel="stylesheet" href="~/css/profileStyle.css" />

<div class="profile-container">
    <h1 class="mb-4 fw-bold text-center text-dark">Update Your Hackathon Task</h1>

    <form>
        <input type="hidden" id="TaskId" name="Id" value="@Model?.Id" />
        <input type="hidden" id="TaskRating" name="Rating" value="@Model?.Rating" />

        <div class="mb-4">
            <label for="TaskName" class="form-label fw-semibold">📝 Task Name</label>
            <input class="form-control rounded-3" type="text" id="TaskName" name="Name" placeholder="Change name" value="@Model?.Name" />
        </div>

        <div class="mb-4">
            <label for="TaskDescription" class="form-label fw-semibold">📌 Task Description</label>
            <textarea class="form-control rounded-3" id="TaskDescription" name="Description" rows="4" placeholder="Change description">@Model?.Description</textarea>
        </div>

        <div class="text-end">
            <button class="btn btn-outline-success" type="button" onclick="updateTask()">💾 Save Changes</button>
        </div>
    </form>
</div>