@model HackathonWebsite.BLL.DtoEntities.UserDtos.UserReadDto

@{
    ViewData["Title"] = "User Profile";
}

<script src="~/js/UsersFrontend.js"></script>
<script src="~/js/TaskFrontend.js"></script>
<script src="~/js/snow.js"></script>
<link rel="stylesheet" href="~/css/profileStyle.css" />

<div class="profile-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 style="font-weight: bold; color: #333;">Welcome, @Model.Username!</h1>
            <p class="text-muted">Your Hackathon profile</p>
        </div>
    </div>

    <div class="mb-4">
        <a class="btn btn-outline-success" onclick="RedirectToTaskCreation()">Create New Task</a>
        <button class="btn btn-outline-danger" onclick="logout()">Log Out</button>
    </div>

    <hr/>
     
    <table class="table table-bordered table-striped rounded-3 overflow-hidden shadow">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Rating</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Tasks)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Name</td>
                <td>@e.Rating</td>
                <td>@e.Description</td>
                <td>
                    <button type="button" class="btn btn-sm btn-outline-primary me-1" onclick="RedirectToTaskDetailedView(@e.Id)">Details</button>
                    <button type="button" class="btn btn-sm btn-outline-primary me-1" onclick="RedirectToTaskEditing(@e.Id)">Edit</button>
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteTask(@e.Id)">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
