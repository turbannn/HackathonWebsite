@model HackathonWebsite.BLL.DtoEntities.UserDtos.UserReadDto

@{
    ViewData["Title"] = "Teacher Profile";
}

<script src="~/js/UsersFrontend.js"></script>
<script src="~/js/Snow.js"></script>
<link rel="stylesheet" href="~/css/profileStyle.css" />

<div class="profile-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark">Welcome, @Model.Username!</h1>
            <p class="text-muted">Hackathon Teacher Profile</p>
        </div>
    </div>

    <div class="mb-4">
        <button class="btn btn-outline-danger" onclick="logout()">Log Out</button>
    </div>

    <hr class="mb-4"/>
    <h4 class="mb-3">📚 Rated Tasks</h4>

    <table class="table table-bordered table-striped rounded-3 overflow-hidden shadow">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Rating</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Tasks)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Name</td>
                <td>@e.Rating</td>
                <td>@e.Description</td>
            </tr>
        }
        </tbody>
    </table>
</div>
