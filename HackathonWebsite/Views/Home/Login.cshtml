@{
    ViewData["Title"] = "Login";
}

@model HackathonWebsite.BLL.DtoEntities.UserDtos.UserLogin

<script src="~/js/UsersFrontend.js"></script>

<div class="d-flex align-items-center justify-content-center" style="height: 80vh;">
    <div class="p-4 rounded-4 shadow" style="width: 400px; background-color: #f8f9fa;">
        <h5 class="text-center text-muted mb-1">Hackathon Website</h5>
        <h1 class="mb-4 text-start fw-bold text-dark">Login</h1>

        <form asp-controller="Home">
            <div class="mb-3 text-start">
                <label class="form-label">Username</label>
                <input class="form-control rounded-3" type="text" id="LoginUsername" name="Username" placeholder="Enter username" value="@Model?.Username" />
            </div>

            <div class="mb-4 text-start">
                <label class="form-label">Password</label>
                <input class="form-control rounded-3" type="password" id="LoginPassword" name="Password" placeholder="Enter password" value="@Model?.Password" />
            </div>

            <button class="btn btn-primary w-100 rounded-3" type="button" onclick="submitLogin()">Login</button>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">New here? — 
                <a asp-controller="Home" asp-action="RegistrationView" class="text-decoration-none">Sign up</a>
            </small>
        </div>
    </div>
</div>